<div id="weather"></div>

<style>
    #weather {
        font-family: Arial, sans-serif;
        color: #333;
        padding: 20px;
    }

    .forecast-day {
        display: inline-block;
        width: 24%;
        margin: 10px;
        padding: 15px;
        background-color: #f0f0f0;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .forecast-day h3 {
        font-size: 18px;
        margin: 10px 0;
        color: #4CAF50;
    }

    .forecast-details p {
        font-size: 14px;
        line-height: 1.6;
        margin: 5px 0;
    }

    .forecast-details img.weather-icon {
        width: 50px;
        height: 50px;
    }

    .forecast-day:hover {
        background-color: #e0f7fa;
    }

    /* Style cho ngày hôm nay */
    .forecast-day.today {
        background-color: #ffeb3b; /* Màu nền cho ngày hôm nay */
        color: #333; /* Màu chữ cho ngày hôm nay */
    }

    .forecast-day.today h3 {
        color: #d32f2f; /* Màu chữ cho tiêu đề ngày hôm nay */
    }

    @media (max-width: 768px) {
        .forecast-day {
            width: 48%;
        }
    }

    @media (max-width: 480px) {
        .forecast-day {
            width: 100%;
        }
    }
</style>

<script>
    const apiKey = "<?php echo $block->getApiKey(); ?>";
    const city = "<?php echo $block->getCity(); ?>";
    const lang = "<?php echo $block->getLang(); ?>";

    async function getForecast() {
        try {
            const response = await fetch(
                `https://api.openweathermap.org/data/2.5/forecast?q=${city}&appid=${apiKey}&units=metric&lang=${lang}`
            );
            if (!response.ok) {
                throw new Error("Network response was not ok");
            }
            const data = await response.json();
            displayForecast(data);
        } catch (error) {
            console.error("Fetch error: ", error);
            document.getElementById("weather").innerHTML = "<p>Unable to fetch weather data. Please try again later.</p>";
        }
    }

    function displayForecast(data) {
        const forecastDiv = document.getElementById("weather");
        forecastDiv.innerHTML = "<h2>Dự báo thời tiết hôm nay và các ngày sắp tới</h2>";

        const dailyData = {};
        data.list.forEach((item) => {
            const date = new Date(item.dt * 1000).toLocaleDateString("vi-VN", {
                weekday: "long",
            });
            if (!dailyData[date]) {
                dailyData[date] = [];
            }
            dailyData[date].push(item);
        });

        const days = Object.keys(dailyData).slice(0, 8); 
        const today = new Date().toLocaleDateString("vi-VN", { weekday: "long" });

        days.forEach((day) => {
            const dayData = dailyData[day];
            let minTemp = Number.MAX_VALUE;
            let maxTemp = Number.MIN_VALUE;

            dayData.forEach((item) => {
                if (item.main.temp < minTemp) minTemp = item.main.temp;
                if (item.main.temp > maxTemp) maxTemp = item.main.temp;
            });

            const isToday = day === today;  // Kiểm tra nếu là ngày hôm nay
            const dayClass = isToday ? "forecast-day today" : "forecast-day"; // Thêm class "today" cho ngày hôm nay

            const html = `
                <div class="${dayClass}">
                    <h3>${day}</h3>
                    <div class="forecast-details">
                        <p><strong>Thời tiết:</strong> ${dayData[0].weather[0].main} (${dayData[0].weather[0].description})</p>
                        <p>
                            <img src="https://openweathermap.org/img/wn/${dayData[0].weather[0].icon}@2x.png" alt="Weather Icon" class="weather-icon">
                        </p> 
                        <p><strong>Nhiệt độ:</strong> ${minTemp}°C - ${maxTemp}°C</p>
                        <p><strong>Độ ẩm:</strong> ${dayData[0].main.humidity}%</p>
                        <p><strong>Tốc độ gió:</strong> ${dayData[0].wind.speed} m/s</p>
                    </div>
                </div>
            `;
            forecastDiv.innerHTML += html;
        });
    }

    getForecast();
</script>
